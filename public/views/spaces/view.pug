            h2(class='spvw-nm subt')=space.name
            p(class='spvw-desc normal')=space.description
            span(class='spvw-managed')='managed by '
              if space.manager.id == user.id
                span()='you'
              else
                span()='@'+space.manager.username
            
            if space.posts.length 
              span(class='spvw-dtl')='with '+space.posts.length+' posts.'
            else 
              span(class='spvw-dtl')='without posts.'

