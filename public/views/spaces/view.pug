doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/themes/default.css")
    link(rel="stylesheet", href="/css/spaces/new.css")
    title=space.name+' - i like!'
  body()
    include ../includes/header_logged.pug
    include ../includes/nav_inapp.pug
    
    div(class='background' style=`background: url(${space.banner}); background-position: top; background-size: cover;`)

    main
      div(class='spvw')
        header(class='spvw-hr' style=`background: url('${space.banner}'); background-repeat: no-repeat; background-size: cover; background-position: top;`)
