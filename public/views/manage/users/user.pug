doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="../../../css/normalize.css")
    link(rel="stylesheet", href="../../../css/themes/default.css")
    link(rel="stylesheet", href="../../../css/manage/default.css")
    link(rel="stylesheet", href="../../../css/manage/sanctions/user.css")
    title="Manage / User @2"+user.username+" / i like!"
  body
    include ../../includes/header_manage.pug

    main
      div(class='bx-dtl')
        h3(class='subt-3' id='user-display-name' spellcheck="false" contenteditable)=user.display_name
        span(class='dtl-cont-val bold' data-userid=user.id)="#"+user.id
        span(class='dtl-cont-val') @
          span(class='dtl-cont-val' id='user-username' spellcheck="false" contenteditable)=user.username
        
        div(class='status-cont')
          if user.status
            svg(xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512" class="status-connected")
              path(d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9l2.6-2.4C267.2 438.6 256 404.6 256 368c0-97.2 78.8-176 176-176c28.3 0 55 6.7 78.7 18.5c.9-6.5 1.3-13 1.3-19.6v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5zM432 512a144 144 0 1 0 0-288 144 144 0 1 0 0 288zm47.9-225c4.3 3.7 5.4 9.9 2.6 14.9L452.4 356H488c5.2 0 9.8 3.3 11.4 8.2s-.1 10.3-4.2 13.4l-96 72c-4.5 3.4-10.8 3.2-15.1-.6s-5.4-9.9-2.6-14.9L411.6 380H376c-5.2 0-9.8-3.3-11.4-8.2s.1-10.3 4.2-13.4l96-72c4.5-3.4 10.8-3.2 15.1 .6z")
            span(class='status-name-connected') Connected
          else
            svg(xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512" class="status-disconnected")
              path(d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9l2.6-2.4C267.2 438.6 256 404.6 256 368c0-97.2 78.8-176 176-176c28.3 0 55 6.7 78.7 18.5c.9-6.5 1.3-13 1.3-19.6v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5zM432 512a144 144 0 1 0 0-288 144 144 0 1 0 0 288zm59.3-180.7L454.6 368l36.7 36.7c6.2 6.2 6.2 16.4 0 22.6s-16.4 6.2-22.6 0L432 390.6l-36.7 36.7c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6L409.4 368l-36.7-36.7c-6.2-6.2-6.2-16.4 0-22.6s16.4-6.2 22.6 0L432 345.4l36.7-36.7c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z")
            span(class='status-name-disconnected') Disconnected
        
        div(class='bx-dtl-cont')
          for role in user.roles
            span(class='dtl-cont-role')=role

        div(class='bx-dtl-cont')
          span(class='dtl-cont-key') Status
          span(class='dtl-cont-val')=user.account_status

        div(class='bx-dtl-cont')
          span(class='dtl-cont-key') Created
          span(class='dtl-cont-val')=user.created_account

        div(class='bx-dtl-cont')
          span(class='dtl-cont-key') Last change
          span(class='dtl-cont-val')=user.last_change_account

        div(class='bx-dtl-cont bx-dtl-cont-btns')
          button(class="btn sucess" id="btn-save" disabled) Save changes
          a(href="/manage/sanctions/"+user.id class='btn') Sanctions
          if perms_to_delete_users
            button(class="btn danger" id="btn-delete") Delete user

    script(src="../../../js/lib/hrMenu.js")
    script(src="../../../js/manage/users/user.js")