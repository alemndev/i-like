doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/themes/default.css")
    link(rel="stylesheet", href="/css/login.css")
    title Login - i like!
  body 
    include includes/header.pug

    main 
      form(action="/login", method="post" class='fm')
        h2(class='subt') Sign in
        label(for="username_login" class='label' class="fm-lb" spellcheck="false") Username
          input(type="text" name="username_login" id="username_login" class="fm-i" minlength="3" maxlength="28" required)
        label(for="password_login" class="fm-lb") Password
          input(type="password" name="password_login" id="password_login" minlength="8" class="fm-i" required)

        button(type="submit" class='fm-btn') let's go!
    
    script(src="/js/lib/hrMenu.js")
    script(src="/js/login.js")