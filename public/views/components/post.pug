- let postBanner = `background: url(${post.banner}); background-position: top; background-size: cover;`

div(class='post')
  header(class='post-hr')
    div(class='post-bnr' style=postBanner)

  div(class='post-mn')
    h2(class='post-ttl')=post.title
    span(class='post-author')='by '
      a(href='/users/'+post.author.username class='link')='@'+post.author.username

    div(class='post-cont')
      - let contentParsed = post.content.split('\n')
      for para in contentParsed
        p(class='post-cont-para')=para

    div(class='post-social')
      if user
        button(class='btn post-social-like')
