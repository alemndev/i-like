- style = `background: url('${space.banner}'); background-position: center; background-size: cover;`

div(class='space' style=style)
  div(class='space-info')
    span(class='space-nm')=space.name
    p(class='space-desc')=space.description
    p(class='space-manager')='managed by '
      if user.id == space.manager.id 
        span()='you'
      else 
        a(href='/users/'+space.manager.username class='link')='@'+space.manager.username
    
    div(class='space-interact')
      button(class='space-btn')
        svg(xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512" class='space-icon icon-heart')
